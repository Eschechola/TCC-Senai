@model Lyfr_Admin.Models.Models.Entity.SugestaoResposta

@{
    ViewData["Title"] = "DetSugestao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="black-background-painel">
        <center>
            <div class="itens-load">
                <div class="load">
                </div>
                <br>
                <p id="loadingDots">Carregando requisição...</p>
            </div>
        </center>
    </div>
    <div class="container container-black">
        <div class="info-clientes nome-cliente" style="opacity: 0;">
            <h2>Erro ao abrir livro</h2>
        </div>
        <div class="info-clientes dados-cliente">
            <div class="div-info">
                <h5>@Model.Email</h5>
                <h5>#@Model.Id</h5>
                <h5 id="data" style="font-size: 20px;">10/12/2000</h5>
            </div>
        </div>
        <div class="info-clientes endereco-cliente">
            <h4>Mensagem</h4>
            <div class="row">
                <div class="col-12 col-lg-10">
                    <h6> &nbsp;&nbsp;&nbsp;@Model.Mensagem</h6>
                </div>
            </div>
            
        </div>
        <div class="info-clientes data-de-cadastro">
            <form method="post">
                <br />
                <center><h3>Responder para o cliente</h3></center>
                <div class="row">
                    <div class="form-group col-12">
                        <label class="control-label"></label>
                        <input type="text" name="Email" style="display: none" value="@Model.Email" />
                        <input type="text" name="Id" style="display: none" value="@Model.Id" />
                        <textarea class="form-control" name="Mensagem" style="max-height:600px; height:300px"></textarea>
                        <span class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn-submit btn-center btn-style btn-adicionar" onclick="ShowLoad();"/>
                </div>
            </form>
        </div>
    </div>

