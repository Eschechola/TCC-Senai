@model  Lyfr_Admin.Models.Entities.Administrador
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/painel.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/img/Icon_Lyfr.png" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/js/scripts.js"></script>
</head>
<body onload="AbrirModalErro()">
    <div class="black-background-painel">
        <center>
            <div class="itens-load">
                <div class="load">
                </div>
                <br>
                <p id="loadingDots">Carregando requisição...</p>
            </div>
        </center>
    </div>

    <div class="container-background">
        <div class="error-message">
            <center>
                <p id="texto-erro">@ViewBag.Erro</p>
            </center>
        </div>
        <div class="container-login-white">
            <div class="image-login">
            </div>

            <div class="content-login">
                <div class="login-inputs">
                    <h3>Insira suas crendênciais para acessar</h3>
                    <hr>
                    <form method="post">
                        <label>Login</label>
                        <input type="text" name="Login" id="Login" required/>
                        <label>Senha</label>
                        <input type="password" id="Senha" name="Senha" required/>
                        <button type="submit" id="btnEnviar" onclick="ShowLoadLogin()">Logar</button>
                        <br>
                    </form>
                    <button id="esqueci-senha" type="button" data-toggle="modal" data-target="#modalSenha">Esqueceu sua senha?</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalSenha" tabindex="-1" role="dialog" aria-labelledby="modalSenhaTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalSenhaTitle">Esqueceu sua senha?</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-11 ml-2">
                            <div class="recuperar-codigo">
                                <br>
                                <p>Digite aqui seu e-mail e nós iremos enviar um código de confirmação:</p>
                                <br />
                                <input type="text" id="inputEsqueceuSenha" name="email" required placeholder="Digite seu email..." />
                                <button id="buttonEsqueceuSenha" onclick="RecuperarSenhaAJAX();">Enviar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Erro != null)
    {
        if (!(ViewBag.Erro == string.Empty))
        {
            <script>
                function AbrirModalErro() {
                    var toast = document.getElementsByClassName('error-message')[0];
                    toast.style.width = '300px';
                    var texto = document.getElementById('texto-erro');
                    texto.style.transition = "5s";
                    texto.style.opacity = "1";

                    setTimeout(FecharModalErro, 7000);
                }

                function FecharModalErro() {
                    var toast = document.getElementsByClassName('error-message')[0];
                    toast.style.width = '0px';
                    var texto = document.getElementById('texto-erro');
                    texto.style.transition = "0.1s";
                    texto.style.opacity = "0"
                }
            </script>
        }
    }

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
