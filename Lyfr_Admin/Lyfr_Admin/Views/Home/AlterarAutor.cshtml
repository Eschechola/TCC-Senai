@model  Lyfr_Admin.Models.Entities.Autores
@{
    ViewData["Title"] = "AlterarAutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container container-black">
        <form asp-action="AdicionarLivros">
            <br />
            <h2>Alterar autor</h2>
            <div class="row">
                <input asp-for="IdAutor" type="hidden" class="form-control" />
                <div class="form-group col-lg-9 col-md-12">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3 col-md-12">
                    <label asp-for="AnoNasc" class="control-label"></label>
                    <input type="date" name="AnoNasc" id="AnoNasc" class="form-control" />
                    <span asp-validation-for="AnoNasc" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-12">
                    <label asp-for="Bio" class="control-label"></label>
                    <textarea asp-for="Bio" class="form-control" cols="7" style="max-height:250px; min-height:40px;"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-12 col-md-12">
                    <label asp-for="Foto" class="control-label"></label>
                    <input type="file" name="Foto" id="Foto" class="form-control" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn-submit btn-center btn-style btn-adicionar" />
            </div>
        </form>
    </div>

