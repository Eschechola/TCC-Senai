@model Lyfr_Admin.Models.Entities.Autores
@{
    ViewData["Title"] = "AdicionarAutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 <div class="black-background-painel">
        <center>
            <div class="itens-load">
                <div class="load">
                </div>
                <br>
                <p id="loadingDots">Carregando requisição...</p>
            </div>
        </center>
    </div>
 <div class="container container-black">
     <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="AdicionarAutor">
         <br />
         <h2>Adicionar autor</h2>
         <div class="row">

             <div class="form-group col-lg-9 col-md-12">
                 <label class="control-label">Nome</label>
                 <input asp-for="Nome" class="form-control" />
                 <span asp-validation-for="Nome" class="text-danger"></span>
             </div>
             <div class="form-group col-lg-3 col-md-12">
                 <label class="control-label">Data de Nascimento</label>
                 <input type="text" name="AnoNasc" id="AnoNasc" class="form-control" />
                 <span asp-validation-for="AnoNasc" class="text-danger"></span>
             </div>
             <div class="form-group col-12 col-md-12">
                 <label class="control-label">Biografia</label>
                 <textarea asp-for="Bio" class="form-control" cols="7" style="max-height:250px; min-height:40px;"></textarea>
                 <span asp-validation-for="Bio" class="text-danger"></span>
             </div>
             <div class="form-group col-lg-12 col-md-12">
                 <label asp-for="Foto" class="control-label"></label>
                 <br>
                 <input type="file" id="file" name="Foto" onchange="SelecionarArquivo(); loadFile(event);" />
                 <label for="file" id="textoLabel" />Escolher arquivo...</label>
                 <span asp-validation-for="Foto" class="text-danger"></span>
             </div>
             <div class="form-group col-lg-12 col-md-12">
                 <center>
                     <img src="" id="imagemAlterar" width="200" height="300" style="display: none;" />
                 </center>
             </div>
         </div>
         <div class="form-group">
             <input type="submit" value="Adicionar" class="btn-submit btn-center btn-style btn-adicionar" onclick="ShowLoad()" />
         </div>
     </form>

     <br /><br />
     <br /><br />
     @if (ViewBag.Info != null)
     {
         <center>
             <h3 style="color: white;">@ViewBag.Info</h3>
             <button class="btn-submit btn-center btn-style btn-adicionar" onclick="window.location.href = '/Home/Autores'; ShowLoad();">Voltar para lista</button>
         </center>
     }

 </div>

