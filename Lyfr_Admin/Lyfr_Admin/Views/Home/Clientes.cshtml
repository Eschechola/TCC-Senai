@model List<Lyfr_Admin.Models.Entities.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="background-display-order" onclick="Dropdown()"></div>
    <div class="black-background-painel">
        <center>
            <div class="itens-load">
                <div class="load">
                </div>
                <br>
                <p id="loadingDots">Carregando requisição...</p>
            </div>
        </center>
    </div>
    <div class="container">

        <div class="table-options">
            <div class="options-list div-title-mobile">
                <h2 class="title-table">@ViewBag.Titulo</h2>
            </div>
            <div class="options-list div-form-pesquisar">
                <form asp-controller="Home" asp-action="Clientes" method="post" id="form-pesquisar" name="form-pesquisar">
                    <input maxlength="14" required type="text" placeholder="Digite o CPF para pesquisar" name="cpf" id="Pesquisa" />
                    <img src="~/img/search.png" id="Enviar"/>
                </form>
            </div>
            <div class="options-list div-title">
                <h2 class="title-table-clientes">@ViewBag.Titulo</h2>
            </div>
            <div class="options-list order-content">
                <div class="order-div">
                    <h4>Ordenar por: </h4>
                    <div class="order-items" onclick="Dropdown()">
                        <p>@ViewBag.Ordenacao</p>
                    </div>
                    <div class="items-dropdown">
                        <br>
                        <p class="item-menu-p" onclick="window.location.href = '/Home/Clientes/?idOrdenacao=1'; ShowLoad()">Crescente</p>
                        <p class="item-menu-p" onclick="window.location.href = '/Home/Clientes/?idOrdenacao=2'; ShowLoad()">Decrescente</p>
                        <p class="item-menu-p" onclick="window.location.href = '/Home/Clientes/?idOrdenacao=3'; ShowLoad()">Nome</p>
                        <p class="item-menu-p" onclick="window.location.href = '/Home/Clientes/?idOrdenacao=4'; ShowLoad()">Email</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive-md div-table div-table-style">
            <table class="table table-striped table-hover table-dark table-bordered table-style">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CPF</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr onclick="window.location.href = '/Home/DetClientes/?cpf=@Model[i].Cpf&senha=@Model[i].Senha'; ShowLoad()">
                                    <td>@Model[i].IdCliente</td>
                                    <td>@Model[i].Nome</td>
                                    <td>@Model[i].Cpf</td>
                                    <td>@Model[i].Email</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">Nenhum cliente cadastrado.</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Erro ao se comunicar com a base de dados!</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    