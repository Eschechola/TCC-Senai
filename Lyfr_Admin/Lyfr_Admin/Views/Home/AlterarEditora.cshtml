@model Lyfr_Admin.Models.Entities.Editora
@{
    ViewData["Title"] = "AlterarEditora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container container-black">
    <form asp-action="AdicionarEditora" method="post">
        <br />
        <h2>Alterar editora</h2>
        <div class="row">
            <input asp-for="IdEditora" class="form-control" type="hidden"/>
            <div class="form-group col-12">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Alterar" class="btn-submit btn-center btn-style btn-adicionar" />
        </div>
    </form>
</div>
